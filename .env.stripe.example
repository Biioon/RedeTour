# Configurações do Stripe para RedeTour

# Chaves do Stripe (obtenha em https://dashboard.stripe.com/test/apikeys)
STRIPE_SECRET_KEY=sk_test_sua_chave_secreta_aqui
STRIPE_PUBLISHABLE_KEY=pk_test_sua_chave_publica_aqui
STRIPE_WEBHOOK_SECRET=whsec_seu_webhook_secret_aqui

# IDs dos Preços dos Planos (crie no dashboard do Stripe)
STRIPE_STARTER_MONTHLY_PRICE_ID=price_starter_monthly_id
STRIPE_STARTER_YEARLY_PRICE_ID=price_starter_yearly_id
STRIPE_PRO_MONTHLY_PRICE_ID=price_pro_monthly_id
STRIPE_PRO_YEARLY_PRICE_ID=price_pro_yearly_id
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_enterprise_monthly_id
STRIPE_ENTERPRISE_YEARLY_PRICE_ID=price_enterprise_yearly_id

# Configurações de Pagamento
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Moeda e Localização
NEXT_PUBLIC_CURRENCY=BRL
NEXT_PUBLIC_LOCALE=pt-BR

# Taxas e Comissões
PLATFORM_FEE_PERCENTAGE=2.5
AFFILIATE_DIRECT_COMMISSION=15
AFFILIATE_INDIRECT_COMMISSION=5

# Webhook Endpoint (para produção)
# STRIPE_WEBHOOK_ENDPOINT=/api/stripe/webhook
# ======================================
# RedeTour Environment Variables
# ======================================
# Este arquivo contém todas as variáveis de ambiente necessárias
# Copie para .env.local e preencha com seus valores

# ======================================
# Supabase Configuration
# ======================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ======================================
# Stripe Configuration
# ======================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ======================================
# Vercel Configuration
# ======================================
NEXT_PUBLIC_VERCEL_URL=http://localhost:3000
VERCEL_URL=http://localhost:3000

# ======================================
# Rate Limiting (Opcional - Upstash)
# ======================================
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token-here

# ======================================
# Analytics & Monitoring (Opcional)
# ======================================
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io
SENTRY_AUTH_TOKEN=your-sentry-auth-token
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ======================================
# Email Configuration (Opcional)
# ======================================
RESEND_API_KEY=re_your_resend_api_key
FROM_EMAIL=noreply@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com

# ======================================
# Google Maps (Opcional)
# ======================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ======================================
# Auth Configuration
# ======================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# ======================================
# Security Configuration
# ======================================
BLOCK_SUSPICIOUS_UA=false
MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT=86400

# ======================================
# Application Configuration
# ======================================
NODE_ENV=development
PORT=3000
HOST=localhost

# ======================================
# Affiliate System Configuration
# ======================================
AFFILIATE_COOKIE_DURATION=30
AFFILIATE_COMMISSION_RATE=0.05
MINIMUM_WITHDRAWAL_AMOUNT=50.00

# ======================================
# Upload Configuration
# ======================================
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx

# ======================================
# Development Configuration
# ======================================
DEBUG=false
LOG_LEVEL=info
ENABLE_ANALYTICS=false

# ======================================
# Database Configuration
# ======================================
DATABASE_URL=postgresql://user:password@localhost:5432/redetour
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=30000

# ======================================
# Cache Configuration
# ======================================
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# ======================================
# Internationalization
# ======================================
DEFAULT_LOCALE=pt-BR
AVAILABLE_LOCALES=pt-BR,es-ES,en-US

# ======================================
# Feature Flags
# ======================================
FEATURE_AFFILIATE_SYSTEM=true
FEATURE_STRIPE_PAYMENTS=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_SMS_NOTIFICATIONS=false
FEATURE_GOOGLE_LOGIN=false
FEATURE_FACEBOOK_LOGIN=false

# ======================================
# Business Configuration
# ======================================
BUSINESS_NAME=RedeTour
BUSINESS_CURRENCY=BRL
BUSINESS_TIMEZONE=America/Sao_Paulo
BUSUPPORT_PHONE=+5511999999999

# ======================================
# Legal Configuration
# ======================================
TERMS_URL=https://redetour.com.br/termos
PRIVACY_URL=https://redetour.com.br/privacidade
SUPPORT_URL=https://redetour.com.br/ajuda